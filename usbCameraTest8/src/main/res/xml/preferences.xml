    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="Report">
        <DropDownPreference
            android:entries="@array/array_analysis_report_format_standard"
            android:entryValues="@array/array_analysis_report_format_standard"
            android:key="key_analysis_report_format_standard"
            android:summary="Switch Summary"
            android:title="Analysis Report Format(Standard/Extended)" />
        <DropDownPreference
            android:entries="@array/array_analysis_report_format_simple"
            android:entryValues="@array/array_analysis_report_format_simple"
            android:key="key_analysis_report_format_simple"
            android:summary="Switch Summary"
            android:title="Analysis Report Format(Simple/Detailed)" />
        <DropDownPreference
            android:entries="@array/array_report_format"
            android:entryValues="@array/array_report_format"
            android:key="key_report_format"
            android:summary="CheckBox Summary"
            android:title="Report Format" />
        <EditTextPreference
            android:defaultValue="50"
            android:key="key_file_path"
            android:summary="CheckBox Summary"
            android:title="File Path" />
    </androidx.preference.PreferenceCategory>
