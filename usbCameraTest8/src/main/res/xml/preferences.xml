<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.PreferenceCategory android:title="Fiber Type"
        android:textSize="40dp">
        <DropDownPreference
            android:defaultValue="1"
            android:entries="@array/array_fiber_type"
            android:entryValues="@array/array_fiber_type"
            android:key="@string/key_fiber_type"
            android:summary="MM"
            android:title="Fiber Type" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="Image">
        <DropDownPreference
            android:defaultValue="1"
            android:entries="@array/array_file_format"
            android:entryValues="@array/array_file_format"
            android:key="@string/key_image_file_format"
            android:summary="1"
            android:title="Image File Format" />
        <EditTextPreference
            android:dialogMessage="Dialog Message"
            android:key="key_filename_prefix"
            android:summary="EditText Summary"
            android:title="Filename Prefix" />
        <EditTextPreference
            android:dialogMessage="Dialog Message"
            android:key="key_sequential_number"
            android:summary="EditText Summary"
            android:title="Sequential Number" />

