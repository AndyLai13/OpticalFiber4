<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/di1000"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="DI1000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/di3000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/di1000l" />

    <Button
        android:id="@+id/di3000"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="DI3000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/di1000"
        app:layout_constraintBottom_toBottomOf="@id/settings"
        app:layout_constraintStart_toStartOf="@id/di1000"/>

    <Button
        android:id="@+id/settings"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Settings"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/di3000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/di1000"/>

    <Button
        android:id="@+id/di1000l"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="DI1000L"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/di1000"
        app:layout_constraintStart_toEndOf="@id/di1000"
        app:layout_constraintEnd_toStartOf="@id/di2000"
        app:layout_constraintBottom_toBottomOf="@id/di1000"/>

    <Button
        android:id="@+id/di2000"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="DI2000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/di1000"
        app:layout_constraintStart_toEndOf="@id/di1000l"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/di5000"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="DI5000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/di3000"
        app:layout_constraintStart_toEndOf="@id/di3000"
        app:layout_constraintEnd_toStartOf="@id/options"/>

    <Button
        android:id="@+id/options"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Options"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@id/di5000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/di5000"/>


</androidx.constraintlayout.widget.ConstraintLayout>